    <insert id='insertarIniciativa' parameterType='map'>
        INSERT INTO Initiative VALUES(#{ini.id}, #{ini.description}, #{ini.detail}, #{ini.creationDate}, #{ini.modificationDate}, #{ini.keyWords,javaType=list,typeHandler=org.apache.ibatis.type.ArrayTypeHandler}, #{ini.user.email}, #{ini.initiativeStatus.id});
    </insert>
    
    <select id='consultarEstadoIniciativas' parameterType='map' resultMap='InitiativeStatusResult'>
        SELECT
            ei.id as initiativestatusid,
            ei.description as initiativestatusdescription
        FROM InitiativeStatus AS ei
        WHERE ei.id = #{id};
    </select>
    
    <insert id='insertarEstadoIniciativa' parameterType='map'>
        INSERT INTO InitiativeStatus VALUES(#{iniSta.id}, #{iniSta.description});
    </insert>

</mapper>